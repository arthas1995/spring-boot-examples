<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.persist.ProvinceMapper">

    <sql id="columns">
        id,name,createTime,updateTime
    </sql>

    <insert id="addProvince" parameterType="com.example.springboot.model.DO.ProvinceDO"
    keyProperty="id" useGeneratedKeys="true">
        INSERT INTO province (id,name,createTime,updateTime)
        VALUE (#{id},#{name},now(),now())
    </insert>

    <select id="getProvince" resultType="com.example.springboot.model.DO.ProvinceDO">
        SELECT <include refid="columns"/>
        FROM province
        WHERE id = #{id}
    </select>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.SpringBoot.persist.CityMapper">

    <sql id="Base_Column_List">
        id, provinceId, name, description
    </sql>

    <insert id="addCity" parameterType="com.example.SpringBoot.dto.City"
    useGeneratedKeys="true" keyProperty="id">
        INSERT INTO  city (id,provinceId,name,description)
        VALUE (#{id},#{provinceId},#{name},#{description})
    </insert>

    <select id="findByName" resultType="com.example.SpringBoot.dto.City">
        select
        <include refid="Base_Column_List" />
        from city
        where name = #{cityName}
    </select>

    <select id="findById" resultType="com.example.SpringBoot.dto.City">
        select
        <include refid="Base_Column_List" />
        from city
        where id = #{id}
    </select>
</mapper>